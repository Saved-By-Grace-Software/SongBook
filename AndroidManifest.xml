<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sbgsoft.songbook"
    android:versionCode="1"
    android:versionName="1.1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.sbgsoft.songbook.main.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sbgsoft.songbook.songs.SongActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_song"
            android:screenOrientation="sensorPortait" />
        <activity
            android:name="com.sbgsoft.songbook.sets.SetActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_set"
            android:screenOrientation="sensorPortait" />
        <activity
            android:name="com.sbgsoft.songbook.songs.EditSongActivity"
            android:label="@string/title_activity_edit_song"
            android:screenOrientation="sensorPortait" />
        <activity
            android:name="com.ericharlow.DragNDrop.DragNDropListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortait" />
        <activity
            android:name="com.sbgsoft.songbook.files.OpenFile"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_open_file"
            android:screenOrientation="sensorPortait" >
        </activity>
    </application>

</manifest>