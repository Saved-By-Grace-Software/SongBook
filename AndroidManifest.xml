<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sbgsoft.songbook"
    android:versionCode="2"
    android:versionName="2.0.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.sbgsoft.songbook.main.Logo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name=".songs.SongActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_song" />
        <activity
            android:name=".sets.SetActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_set" />
        <activity
            android:name=".songs.EditSongRawActivity"
            android:label="@string/title_activity_edit_song" />
        <activity
            android:name=".songs.EditSongTextActivity"
            android:label="@string/title_activity_edit_song" />
        <activity
            android:name="com.ericharlow.dragndrop.DragNDropListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name=".files.OpenFile"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_open_file" >
        </activity>
        
    </application>

</manifest>