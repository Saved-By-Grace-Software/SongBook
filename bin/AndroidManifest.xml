<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sbgsoft.songbook"
    android:versionCode="2"
    android:versionName="2.0.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.sbgsoft.songbook.main.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sbgsoft.songbook.songs.SongActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_song"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.sbgsoft.songbook.sets.SetActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_set"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.sbgsoft.songbook.songs.EditSongRawActivity"
            android:label="@string/title_activity_edit_song"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.sbgsoft.songbook.songs.EditSongTextActivity"
            android:label="@string/title_activity_edit_song"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.ericharlow.dragndrop.DragNDropListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.sbgsoft.songbook.files.OpenFile"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_open_file"
            android:screenOrientation="sensorPortrait" >
        </activity>
    </application>

</manifest>