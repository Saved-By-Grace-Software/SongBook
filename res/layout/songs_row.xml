<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top" > 
    
	<TextView android:id="@+id/songs_row_text"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:includeFontPadding="true"
	    android:paddingLeft="15dp"
	    android:textSize="40dp"
	    android:textColor="@color/defaultTextColor"
	    android:shadowColor="@color/TransparentGrey" 
		android:shadowDx="3"
		android:shadowDy="3" 
		android:shadowRadius="1.5" />
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="25dp" >
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="@string/songs_row_author_text"
	        android:includeFontPadding="true"
	        android:textSize="20dp"
		    android:textStyle="bold|italic"
		    android:paddingLeft="20dp"
		    android:paddingRight="7dp"
		    android:textColor="@color/defaultTextColor" />
	    
	    <TextView android:id="@+id/songs_row_author"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:includeFontPadding="true"
		    android:textSize="20dp"
		    android:textStyle="italic"
		    android:paddingRight="7dp"
		    android:textColor="@color/defaultTextColor" />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="@string/songs_row_key_text"
	        android:includeFontPadding="true"
		    android:textSize="20dp"
		    android:textStyle="bold|italic"
		    android:paddingLeft="20dp"
		    android:paddingRight="7dp"
		    android:textColor="@color/defaultTextColor" />
	    
	    <TextView android:id="@+id/songs_row_key"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:includeFontPadding="true"
		    android:textSize="20dp"
		    android:textStyle="italic"
		    android:paddingRight="7dp"
		    android:textColor="@color/defaultTextColor" />
	    
	</LinearLayout>
	
</LinearLayout>