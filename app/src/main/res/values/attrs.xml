<resources>

    <!-- used to set the minTextSize via xml -->
    <attr name="autoScaleTextViewStyle" format="reference" />

    <declare-styleable name="AutoScaleTextView">
        <attr name="minTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="SongBookThemeTextView">
        <attr name="useShadow" format="boolean" />
        <attr name="isTitle" format="boolean" />
        <attr name="isSpinner" format="boolean" />
        <attr name="isSection" format="boolean" />
    </declare-styleable>

</resources>