<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/song_scrollview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <HorizontalScrollView
            android:id="@+id/hscroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fadeScrollbars="true"
            android:fillViewport="true" >
    
            <com.sbgsoft.songbook.views.AutoFitTextView
                android:id="@+id/song_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/empty_song"
                android:textColor="#000000"
                android:typeface="monospace"
                android:background="#FFFFFF"
                android:textSize="@dimen/defaultSongTextSize"
                android:linksClickable="true"/>

        </HorizontalScrollView>

    </ScrollView>

    <LinearLayout
        android:id="@+id/metronome_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/song_transpose_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_transform_black_24dp"
        app:backgroundTint="@color/TransparentLightGrey"
        android:onClick="onTransposeButtonClick" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/song_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_mode_edit_black_24dp"
        app:backgroundTint="@color/TransparentLightGrey"
        android:onClick="onEditButtonClick"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/song_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_toLeftOf="@+id/song_edit_button"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp"
        app:backgroundTint="@color/TransparentLightGrey"
        android:visibility="gone"
        android:onClick="onPlayButtonClick"/>

</RelativeLayout>
